            <option value="Варна">Варна</option>
            <option value="София">София</option>
        </select> --}}
        <input type="submit">
    </form>
</div>
<div class="container"></div>
<div class="row">
    {{#each cars}}
    {{>carElement}}
    {{/each}}
</div>
</div>


