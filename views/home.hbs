<div class="search">
    <form action="/" method="get">
        <select name="searchBrand" id="searchBrand">
            <option selected disabled>Избери марка</option>
            <option value="all">Всички</option>
            {{#each brands}}
            {{>brandElement}}
            {{/each}}
        </select>
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modelModal">
            Модел
        </button>
        <div class="modal fade" id="modelModal" tabindex="-1" role="dialog" aria-labelledby="modelModal"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Модели</h5>
                    </div>
                    <div class="modal-body" id="searchModel">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Приложи</button>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#regionModal">
            Регион
        </button>
        <div class="modal fade" id="regionModal" tabindex="-1" role="dialog" aria-labelledby="regionModal"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Регион</h5>
                    </div>
                    <div class="modal-body" id="searchRegion">
                        {{#each regions}}
                        {{>regionCheckboxElement}}
                        {{/each}}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Приложи</button>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#engineModal">
            Двигател
        </button>
        <div class="modal fade" id="engineModal" tabindex="-1" role="dialog" aria-labelledby="engineModal"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Двигател</h5>
                    </div>
                    <div class="modal-body" id="searchEngine">
                        {{#each engines}}
                        {{>engineCheckboxElement}}
                        {{/each}}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Приложи</button>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#yearModal">
            Година
        </button>
        <div class="modal fade" id="yearModal" tabindex="-1" role="dialog" aria-labelledby="yearModal"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Година</h5>
                    </div>
                    <div class="modal-body" id="searchYear">
                        <div class="var-slider">
                            <div class="var-value">
                                От:
                                <input type="number" readonly value="{{minYear}}" min="{{minYear}}" max="{{maxYear}}" /> г.
                                <br>
                                До:
                                <input type="number" readonly value="{{maxYear}}" min="{{minYear}}" max="{{maxYear}}" /> г.
                            </div>
                            <input type="range" name="searchYearMin" value="{{minYear}}" min="{{minYear}}" max="{{maxYear}}" step="1" />
                            <input type="range" name="searchYearMax" value="{{maxYear}}" min="{{minYear}}" max="{{maxYear}}" step="1" />
                            <svg width="100%" height="24"/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Приложи</button>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#priceModal">
            Цена
        </button>
        <div class="modal fade" id="priceModal" tabindex="-1" role="dialog" aria-labelledby="priceModal"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Цена</h5>
                    </div>
                    <div class="modal-body" id="searchPrice">
                        <div class="var-slider">
                            <div class="var-value">
                                От:
                                <input type="number" readonly value="{{minPrice}}" min="{{minPrice}}" max="{{maxPrice}}" /> лв.
                                <br>
                                До:
                                <input type="number" readonly value="{{maxPrice}}" min="{{minPrice}}" max="{{maxPrice}}" /> лв.
                            </div>
                            <input type="range" name="searchPriceMin" value="{{minPrice}}" min="{{minPrice}}" max="{{maxPrice}}" step="100" />
                            <input type="range" name="searchPriceMax" value="{{maxPrice}}" min="{{minPrice}}" max="{{maxPrice}}" step="100" />
                            <svg width="100%" height="24"/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Приложи</button>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#mileageModal">
            Пробег
        </button>
        <div class="modal fade" id="mileageModal" tabindex="-1" role="dialog" aria-labelledby="mileageModal"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Пробег</h5>
                    </div>
                    <div class="modal-body" id="searchMileage">
                        <div class="var-slider">
                            <div class="var-value">
                                От:
                                <input type="number" readonly value="{{minMileage}}" min="{{minMileage}}" max="{{maxMileage}}" /> км.
                                <br>
                                До:
                                <input type="number" readonly value="{{maxMileage}}" min="{{minMileage}}" max="{{maxMileage}}" /> км.
                            </div>
                            <input type="range" name="searchMileageMin" value="{{minMileage}}" min="{{minMileage}}" max="{{maxMileage}}" step="1000" />
                            <input type="range" name="searchMileageMax" value="{{maxMileage}}" min="{{minMileage}}" max="{{maxMileage}}" step="1000" />
                            <svg width="100%" height="24"/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Приложи</button>
                    </div>
                </div>
            </div>
        </div>
        <input type="submit">
    </form>
</div>
<div class="container"></div>
<div class="row">
    {{#each cars}}
    {{>carElement}}
    {{/each}}
</div>
</div>

